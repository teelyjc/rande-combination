{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "node16",
    "target": "es2022",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist/*", "node_modules/*"]
}
